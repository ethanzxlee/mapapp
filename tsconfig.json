{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "lib": ["es6", "dom"],
        "baseUrl": ".",
        "paths": {
            "@uow-map/*": ["./app/modules/*"],
            "@uow-map-viewer/*": ["./app/viewer-app/*"],
            "*": ["./node_modules/tns-core-modules/*", "./node_modules/*"]
        }
    },
    "exclude": ["node_modules", "platforms"]
}
